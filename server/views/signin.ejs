<%- include('parts/header.ejs') %>
        <div id="login">
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="/" method="GET">
                                <h3 class="text-center mt-5 mb-4">Login</h3>
                                <div class="form-group mb-3">
                                    <label for="email" class="">Email:</label><br>
                                    <input type="email" name="email" id="email" class="form-control shadow-none" >
                                </div>
                                <div class="form-group mb-3">
                                    <label for="password" class="">Password:</label><br>
                                    <input type="text" name="password" id="password" class="form-control shadow-none">
                                </div>
                                <div class="login-err d-none alert alert-danger text-white"></div>
                                <input type="submit" class="custom-btn mt-5" value="Login" id="login-btn">
                                <div class="text-center mt-3">
                                    Are you haven't acount
                                    <a href="/signup" class="text-decoration-none text-primary">signup</a>
                                    ?
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
<%- include('parts/bottom.ejs') %>
<script src="/js/login.js"></script>
</html>
